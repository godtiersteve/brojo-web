@page
@model GrandBlue.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h4>Add Combo</h4>
<hr />
<div class="row">
    <div class="form-wrapper">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Combo.Starter"></label>
                <input asp-for="Combo.Starter" size="10"/>
                <span asp-validation-for="Combo.Starter"></span>
            </div>
            <div class="form-group">
                <label asp-for="Combo.Notation"></label>
                <input asp-for="Combo.Notation" size="30"/>
                <span asp-validation-for="Combo.Notation"></span>
            </div>
            <div class="form-group">
                <label asp-for="Combo.Damage"></label>
                <input asp-for="Combo.Damage" />
                <span asp-validation-for="Combo.Damage"></span>
            </div>
            <div class="form-group">
                <label asp-for="Combo.MeterGain">Meter Gain</label>
                <input asp-for="Combo.MeterGain" />
                <span asp-validation-for="Combo.MeterGain"></span>
            </div>
            <div class="form-group">
                EX Cost
            </div>
            <div class="form-group">
                <label asp-for="Combo.Position"></label>
                <input asp-for="Combo.Position" />
                <span asp-validation-for="Combo.Position"></span>
            </div>
            <div class="form-group">
                <label asp-for="Combo.WorksOn"></label>
                <input asp-for="Combo.WorksOn" />
                <span asp-validation-for="Combo.WorksOn"></span>
            </div>
            <div class="form-group">
                <label asp-for="Combo.Notes"></label>
                <input asp-for="Combo.Notes" size="100"/>
                <span asp-validation-for="Combo.Notes"></span>
            </div>
            <div class="form-group">
                <label asp-for="Combo.Video"></label>
                <input asp-for="Combo.Video" size="50" />
                <span asp-validation-for="Combo.Video"></span>
            </div>
            <br /> <br />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
